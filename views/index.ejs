        function dikkat(light){
            var degistirilemeyen = light.getElementsByTagName("input");
            axios({
            method:"post",
            url:"",
            data:{kadi:degistirilemeyen[0].value, kpass:degistirilemeyen[1].value}
        }).then(cevap=>{          
